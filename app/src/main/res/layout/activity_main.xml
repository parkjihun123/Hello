<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_pizza_main"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/menu_pizza1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="피자 선택"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <RadioButton
            android:id="@+id/pizza1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="포테이토 피자\n10,000원" />

        <RadioButton
            android:id="@+id/pizza2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시리얼 칠리크랩\n20,000" />

        <RadioButton
            android:id="@+id/pizza3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="더블 치즈 피자\n30,000" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사이즈 선택"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <RadioButton
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Large (+5000원)" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="콜라 추가"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-" />

        <EditText
            android:id="@+id/edit_cola_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문내역"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:stretchColumns="*">


        <TableRow>

            <TextView android:text="피자 선택" />

            <TextView
                android:id="@+id/txt_pizza_price"
                android:gravity="right"
                android:text="00원" />

        </TableRow>


        <TableRow>

            <TextView android:text="사이즈 선택" />

            <TextView
                android:id="@+id/txt_size_price"
                android:gravity="right"
                android:text="00원" />

        </TableRow>


        <TableRow>

            <TextView android:text="콜라 추가" />

            <TextView
                android:id="@+id/txt_cola_price"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="00원" />

        </TableRow>


        <TableRow android:background="#E91E63">

            <TextView
                android:text="결제금액"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_total_pay"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="00원"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </TableRow>

    </TableLayout>

    <CheckBox
        android:id="@+id/chk_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문내역에 동의합니다." />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="주문하기" />


</LinearLayout>